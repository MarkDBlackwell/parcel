<div class="row">
  <div class="span12">
    <div class="page-header">
      <h2><%= @garden.title %> <small> <%= @garden.neighborhood %></small></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="span8">
    <h3>Description</h3>
    <p><%= @garden.description %></p>
    <h3>Photos</h3>
    <img src="http://placehold.it/300x300" class="img-polaroid">
  </div>
  <div class="span4">
    <div class="well">
      <dl>
        <dt>Available from</dt>
        <dd><%= @garden.created_at.strftime("%d %b %Y") %></dd>
        <dt>Vacancies</dt>
        <dd>1</dd>
      </dl>
    </div>
    <div class="well">
      <dl>
        <dt>Contact</dt>
        <dd><%= @garden.user.first_name %></dd>
        <dt>Message</dt>
        <dd><textarea rows="3" placeholder="Ask the parcel owner a question..."></textarea></dd>
      </dl>
      <%= button_to "Message", new_garden_path,
          :class => "btn", :method => :get %>
      <% if can? :update, @garden %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_garden_path(@garden), :class => 'btn' %>
      <% end %>
      <% if can? :destroy, @garden %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              garden_path(@garden),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
